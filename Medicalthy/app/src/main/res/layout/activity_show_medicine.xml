<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="364dp"
        android:layout_height="248dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prueba" />

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ibuprofeno Kern Pharma 600mg (lblTitle)"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/lblDescription"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:text="Este campo corresponde a la descripción del prodcuto. Se puede encontrar como lblDescription"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

    <TextView
        android:id="@+id/lblShotsList"
        android:layout_width="375dp"
        android:layout_height="108dp"
        android:layout_marginTop="12dp"
        android:text="Aquí se mostraría en formato lista las siguientes tomas: (Se puede encontrar como lblShotsList)\n\t\t· Toma 1 [# cantidad]: 00:00\n\t\t· Toma 2 [# cantidad]: 00:00\n\t\t· Toma 3 [# cantidad]: 00:00"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDescription" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Tomado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnNoOk"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="24dp"
        android:text="No tomado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSpeak"
        app:layout_constraintStart_toEndOf="@+id/btnOk" />

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="131dp"
        android:layout_height="135dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Speak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>